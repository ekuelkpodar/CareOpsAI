{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@careops/fhir": ["packages/fhir/src"],
      "@careops/agents": ["packages/agents/src"],
      "@careops/ui": ["packages/ui/src"],
      "@careops/config": ["packages/config/src"]
    }
  }
}
